        <servlet-name>UserInfoList</servlet-name>
        <url-pattern>/UserInfoList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deposit</servlet-name>
        <servlet-class>operations.trade.deposit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deposit</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>

    <servlet>
