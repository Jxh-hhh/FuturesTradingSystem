<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <welcome-file-list>
        <welcome-file>LoginAndRegister.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>sendMailServlet</servlet-name>
        <servlet-class>operations.LoginAndRegister.sendMail.sendMailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendMailServlet</servlet-name>
        <url-pattern>/sendMailServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserInfoList</servlet-name>
        <servlet-class>wxServlet.UserInfoList</servlet-class>
    </servlet>
