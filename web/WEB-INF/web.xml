        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>resetPasswordServlet</servlet-name>
        <servlet-class>operations.LoginAndRegister.resetPassword.resetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>resetPasswordServlet</servlet-name>
        <url-pattern>/resetPasswordServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sell</servlet-name>
        <servlet-class>operations.trade.sell</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sell</servlet-name>
        <url-pattern>/sell</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getWeatherServlet</servlet-name>
        <servlet-class>operations.getData.getWeatherServlet</servlet-class>
